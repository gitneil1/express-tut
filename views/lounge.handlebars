
{{>homelink}}
<div class="page-header" ng-app="lounge">
    <link rel="stylesheet" href="/css/lounge.css">
    
    <h3>The Lounge</h3>
    <div ng-controller="loungeCtrl">
    
        <p class="logout">Hello, <span ng-bind="username"></span> <a href="/logout"> Logout</a></p>

        <div class="questions_list">
            <h3>Questions posted for the day here</h3>
            <ul id="questions">
            
            </ul>
        </div>

        <div class="sort_selection">
            <select ng-options="cat as cat.name for cat in categories"
                    ng-model="category"
                    ng-change="update()"></select>
            <br>
        </div>

        <footer>AskAnyone.com 2016</footer>
        <script src="/js/angular.min.js"></script>
        <script src="/js/lounge.js"></script>
        
    
    </div><!-- end loungeCtrl -->
</div>