{{>homelink}}

<div class="page-header">
    
    <p>Welcome, {{user}}.</p>
    
    <form action="/askQuestion" method="post">
        <div class="form-group">
            <label for="ques" class="control-label">Question</label>
            <input type="text" class="form-control" name="ques" id="ques" placeholder="Your question...">
        </div>
        
        <div class="form-group">
            <label for="categories" class="control-label">Select category</label>
            <select id="categories" name="categories">
                <option>Science and Technology</option>
                <option>Business</option>
                <option>Personal</option>
                <option>Social</option>
                <option>Employment</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="desc" class="control-label">Describe your question</label><br>
            <textarea id="desc" name="desc" class="form-control" rows="15" placeholder="Explain"></textarea>
        </div>
        
        <div class="form-group">
            <label for="attachedImage" class="control-label">Attach image</label>
            <input type="file" id="attachedImage" name="attachedImage">
        </div>
        
        <div class="form-group">
            <input type="submit" value="Post your question">
        </div>
    </form>
</div>

